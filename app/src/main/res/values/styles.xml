<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="custom_button_primary">
        <item name="android:background">@drawable/custom_button_primary</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/public_sans_bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:width">340dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="custom_button_secondary">
        <item name="android:background">@drawable/custom_button_secondary</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/public_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:width">340dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/public_sans</item>
        <item name="android:width">340dp</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
        <item name="android:height">56dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>


</resources>