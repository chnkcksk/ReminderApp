<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_bg_color"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="72dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/reminderTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:fontFamily="@font/public_sans"
            android:textSize="16sp"
            android:text="Grocery Shopping"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/reminderDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:textSize="14sp"
                android:textColor="@color/third_text_color"
                android:text="Tomorrow, "/>
            <TextView
                android:id="@+id/reminderTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:textSize="14sp"
                android:textColor="@color/third_text_color"
                android:text="9:00 AM"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/reminderIV"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/priorityTV"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:text="N"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:textSize="14sp"
        android:fontFamily="@font/public_sans_bold"/>


    <Switch
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

</LinearLayout>